<!DOCTYPE html>
<html lang="nl">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Profiel</title>
    <link rel="stylesheet" href="/styles/algemeen.css">
    <link rel="stylesheet" href="/styles/profile.css" />
  </head>

  
  <body>
    <%- include('header') %>
    
    <main>
      <section class="profileContainer">
        <h1>Account</h1>
        <section class="profileInfo">
          <h2>Profiel</h2>
          <img class="lazy-load"
            data-src="/images/barbaar.png"
            alt="Een foto van een karakter">
          <p>Naam: <%= username %></p>
          <p>Email: <%= email %></p>
        </section>

          <section class="opgeslagen">
            <h2>Opgeslagen clans</h2>

            <% if (clansData && clansData.length > 0) { %>
              <% clansData.forEach(clan => { %>
                <div class="clan-card">
                  <img src="<%= clan.clanImg %>" alt="<%= clan.clanName %> logo">
                  <h3><%= clan.clanName %></h3>
                  <p>Level: <%= clan.clanLevel %></p>
                  <p>Trophies: <%= clan.trophies %></p>
                  <!-- Add more clan details as needed -->
                </div>
              <% }); %>
            <% } else { %>
              <p><%= error %></p>
            <% } %>
              </ul>
          </section>
          
        </section>
        
        <section class="profileActions">
          <a href="/edit-profile" class="btn">Profiel bewerken</a>
          <form action="/logout" method="POST" style="display: inline;">
            <button type="submit" class="btn">Uitloggen</button>
          </form>
        </section>

        <section>
          <% if (error) { %>
            <label><%= error %></label>
          <% } %>
        </section>

              </section>
            </main>
            <script src="/javascript/lazyLoad.js"></script>
          </body>
        </html>
